#rank
	.content__instructions
		margin 0 auto
		padding-top 2rem
		max-width $column-width

		p
			margin 0

		p:first-of-type
			display block

		p:last-of-type
			display none
			// color $purple

		&.is-answering
			p:first-of-type
				display none

			p:last-of-type
				display block

		.instructions
			set-type-size(medium, true)
			text-align center
			font-weight 700
			font-family $mono

	.content__figure
		margin 0 auto
		padding 1rem
		max-width $column-width
		border 8px solid $fg
		opacity 0

		&.is-visible
			opacity 1

	.content__terms
		position relative
		display flex
		flex-wrap wrap
		margin 0 auto
		padding 2rem 0
		max-width 42rem

		li
			position relative

			&.is-complete
				opacity 0.33
				pointer-events none

			&.is-hidden
				opacity 0
				pointer-events none

			&.is-active
				position absolute
				opacity 1
				pointer-events none

				button
					background-color $fg
					color $white

					&:before
						background linear-gradient(to bottom, $fg 0%, $fg 100%)

					&:after
						background $white

		button
			position relative
			border-radius 4px
			background-color $gray-light
			text-transform none
			set-type-size(small, false)

			+mq('bp-4')
				set-type-size(root, false)

			&:before
				position absolute
				bottom 0
				left -4px
				z-index 0
				width 16px
				height 8px
				border-bottom-right-radius 8px
				background linear-gradient(to bottom, $gray-light 0%, $gray-light 100%)
				background-attachment fixed
				content ''

			&:after
				position absolute
				bottom 0
				left -12px
				z-index 1
				width 12px
				height 9px
				border-bottom-right-radius 8px
				background $white
				content ''

			&:hover
				background-color $fg
				color $white

				&:before
					background linear-gradient(to bottom, $fg 0%, $fg 100%)

				&:after
					background $white

	.content__slider
		max-width $perception-width

	.content__scale
		&.is-disabled
			opacity 0.33

		ul
			display flex
			justify-content space-between
			align-items flex-start
			margin 1rem auto
			max-width $perception-width

		li
			padding 0 0.5rem
			width 20%
			color $gray-dark
			text-align center
			font-weight 600
			font-family $mono
			user-select none

			svg
				opacity 0.33

			&:nth-of-type(4) svg
				transform-origin 50% 100%
				animation waddle 2000ms ease-in-out alternate infinite

			&:last-of-type svg
				transform-origin 50% 100%
				animation roll 750ms ease-in-out alternate infinite

			&.is-active
				color $fg

				svg
					opacity 1

		span
			display block
			margin-top 0.5rem
			set-type-size(x-small, false)
			line-height 1.35

	.content__nav
		display flex
		flex-direction column
		justify-content center
		align-items center
		margin 0 auto
		padding 1rem 0
		max-width $column-width

		&.is-hidden
			visibility hidden

		.spacer
			padding 1rem 0

		button
			margin 0
			margin-bottom 0.5em

			&.is-disabled
				opacity 0.33
				cursor not-allowed

		.btn--submit
			// set-type-size(x-large, false)
			visibility visible
			padding 0.5em 2em
			text-transform uppercase

			&.is-hidden
				visibility hidden

			&.is-invisible
				visibility hidden

		.btn--skip, .btn--another
			background-color transparent
			set-type-size(small, false)
			text-transform none

			&:hover
				background-color $secondary

			&.is-hidden
				display none

			&.is-invisible
				visibility hidden

		.btn--skip
			font-weight 400

	.pudding-chart
		display block
		font-family $mono

		.term .path--area
			stroke none
			fill-opacity 1

		.term .path--line
			stroke $fg
			stroke-width 2px
			stroke-opacity 0
			fill none

		.term .baseline
			stroke-width 2px
			stroke $fg

		.family--lol
			fill $c-lol

		.family--ha
			fill $c-ha

		.family--acronym
			fill $c-acronym

		.family--text
			fill $c-text

		.family--other
			fill $c-other

		text
			fill $fg
			set-type-size(root, false)
			font-weight 700

	figure .axis
		display flex
		justify-content space-between
		align-items center
		// background-color $green-dark
		padding-top 1rem
		font-family $mono

		p
			margin 0
			padding 0 2rem
			set-type-size(small, false)
			// text-align center
			width 50%
			color $fg
			line-height 1

			&:nth-of-type(2)
				set-type-size(large, false)
				text-align center
				text-transform uppercase
				font-weight 600

			&:last-of-type
				text-align right

@keyframes waddle
	0%
		transform rotate(0)

	75%
		transform rotate(-1deg)

	85%
		transform rotate(1deg)

	95%
		transform rotate(-1deg)

	100%
		transform rotate(1deg)

@keyframes roll
	0%
		transform rotate(-5deg)

	100%
		transform rotate(5deg)