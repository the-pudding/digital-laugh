#rank
	.content__instructions
		margin 0 auto
		padding-top 2rem
		max-width $column-width

		p
			margin 0

		p:first-of-type
			display block

		p:last-of-type
			display none
			// color $purple

		&.is-answering
			p:first-of-type
				display none

			p:last-of-type
				display block

		.instructions
			set-type-size(medium, true)
			padding 0 1rem
			text-align center
			font-weight 600
			font-family $mono
			line-height 1.2

	.content__figure
		overflow hidden
		margin 0 auto
		padding 0.5rem
		max-width 60rem
		width 92.5%
		height 6rem
		border 8px solid $fg
		opacity 0

		+mq('bp-4')
			padding 1rem

		&.is-visible
			opacity 1

	.content__terms
		position relative
		display flex
		flex-wrap wrap
		margin 0 auto
		padding 2rem 1rem
		max-width 42rem

		li
			position relative

			&.is-complete
				opacity 0.33
				pointer-events none

			&.is-hidden
				opacity 0
				pointer-events none

			&.is-active
				position absolute
				opacity 1
				pointer-events none

				button
					background-color $fg
					color $white

					&:before
						background linear-gradient(to bottom, $fg 0%, $fg 100%)

					&:after
						background $white

		button
			position relative
			border-radius 4px
			background-color $gray-light
			text-transform none
			set-type-size(small, false)

			+mq('bp-4')
				set-type-size(root, false)

			&:before
				position absolute
				bottom 0
				left -4px
				z-index 0
				width 16px
				height 8px
				border-bottom-right-radius 8px
				background linear-gradient(to bottom, $gray-light 0%, $gray-light 100%)
				background-attachment fixed
				content ''

			&:after
				position absolute
				bottom 0
				left -12px
				z-index 1
				width 12px
				height 9px
				border-bottom-right-radius 8px
				background $white
				content ''

			&:hover
				background-color $fg
				color $white

				&:before
					background linear-gradient(to bottom, $fg 0%, $fg 100%)

				&:after
					background $white

	.content__slider
		max-width $perception-width
		width 85%

	.content__scale
		&.is-disabled
			opacity 0.33

		ul
			display flex
			justify-content space-between
			align-items flex-start
			margin 1rem auto
			max-width $perception-width

		li
			padding 0 0.25rem
			width 20%
			color $gray-dark
			text-align center
			font-weight 600
			font-family $mono
			user-select none

			span
				display none

				+mq('bp-2')
					display inline-block

			+mq('bp-3')
				padding 0 0.5rem

			svg
				max-width 10rem
				opacity 0.33

			&:nth-of-type(4) svg
				transform-origin 50% 100%
				animation waddle 2000ms ease-in-out alternate infinite

			&:last-of-type svg
				transform-origin 50% 100%
				animation roll 750ms ease-in-out alternate infinite

			&.is-active
				color $fg

				svg
					opacity 1

		span
			margin-top 0.5rem
			set-type-size(xxx-small, false)
			display none
			line-height 1.35

			+mq('bp-2')
				display block

			+mq('bp-4')
				set-type-size(x-small, false)

	.content__nav
		display flex
		flex-direction column
		justify-content center
		align-items center
		margin 0 auto
		padding 1rem 0
		max-width $column-width

		&.is-hidden
			visibility hidden

		.spacer
			padding 1rem 0

		.nav__sort
			display none

			&.is-visible
				display block

		button
			margin 0
			margin-bottom 0.5em

			&.is-disabled
				opacity 0.33
				pointer-events none

		.btn--submit
			// set-type-size(x-large, false)
			visibility visible
			padding 0.5em 2em
			text-transform uppercase

			&.is-hidden
				visibility hidden

			&.is-invisible
				visibility hidden

		.btn--skip, .btn--another
			background-color transparent
			set-type-size(small, false)
			text-transform none

			&:hover
				background-color $secondary

			&.is-hidden
				display none

			&.is-invisible
				visibility hidden

		.btn--skip
			font-weight 400

		.btn--sort-funny, .btn--sort-alpha
			background-color transparent
			set-type-size(small, false)
			padding-bottom 0.25em
			text-transform none
			font-weight 400

			&.is-active
				border-bottom 2px solid currentColor

			&:hover
				border-bottom 2px solid currentColor

	.pudding-chart
		display block
		font-family $mono

		.term .path--area
			stroke none
			fill-opacity 1

		.term .path--line
			stroke $fg
			stroke-width 3px
			stroke-opacity 1
			fill none
			stroke-linecap round

		.term .baseline
			stroke-width 5px
			stroke $fg
			stroke-opacity 1
			stroke-linecap round

		.term circle
			opacity 0
			stroke-width 3px
			stroke $fg
			fill $bg

			+mq('bp-4')
				opacity 1

		.family--lol
			fill $c-lol

		.family--ha
			fill $c-ha

		.family--acronym
			fill $c-acronym

		.family--text
			fill $c-text

		.family--other
			fill $c-other

		.text--label
			fill $fg
			set-type-size(small, false)
			font-weight 600

		.text--count
			fill $gray-dark
			set-type-size(x-small, false)
			font-weight 400

	figure .axis
		position relative
		display flex
		justify-content space-between
		align-items center
		margin-right 8px
		margin-left 84px
		padding-top 2rem
		font-family $mono

		+mq('bp-4')
			padding-top 1rem

		p
			margin 0
			padding 0
			set-type-size(xx-small, false)
			color $fg
			line-height 1

			+mq('bp-4')
				set-type-size(small, false)

			&:nth-of-type(2)
				set-type-size(small, false)
				position absolute
				top 0
				left 50%
				text-align center
				text-transform uppercase
				font-weight 600
				transform translate(-50%, 50%)

				+mq('bp-4')
					set-type-size(large, false)
					position relative
					top auto
					left auto
					transform none

			&:last-of-type
				text-align right

	.figure__footer
		display flex
		visibility hidden
		flex-wrap wrap
		justify-content space-between
		margin 0 auto
		padding 1rem 0
		max-width 60rem
		width 92.5%

		&.is-visible
			visibility visible

	.figure__legend
		set-type-size(x-small, false)
		padding 0.5rem 0
		padding-right 1rem
		font-weight 600
		font-family $mono
		line-height 1

		+mq('bp-4')
			set-type-size(small, false)

		span
			display inline-block
			width 12px
			height 12px
			border 3px solid $fg
			border-radius 6px

	.figure__key
		display flex
		justify-content center
		padding 0

		li
			padding 0.5rem
			line-height 1
			set-type-size(x-small, false)
			width 4rem
			text-align center
			font-weight 600
			font-family $mono

			+mq('bp-4')
				width 6rem
				set-type-size(small, false)

			&:first-of-type
				display none

				+mq('bp-4')
					display block
					padding-top 0.5rem

		.key--lol
			background-color $c-lol

		.key--ha
			background-color $c-ha

		.key--acronym
			background-color $c-acronym

		.key--text
			background-color $c-text

		.key--other
			background-color $c-other

@keyframes waddle
	0%
		transform rotate(0)

	75%
		transform rotate(-1deg)

	85%
		transform rotate(1deg)

	95%
		transform rotate(-1deg)

	100%
		transform rotate(1deg)

@keyframes roll
	0%
		transform rotate(-5deg)

	100%
		transform rotate(5deg)