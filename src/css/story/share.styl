#share .chart-lower
	figure
		margin 2rem auto

	svg
		display block
		margin 0 auto

	text
		font-weight 600
		font-family $mono

	.text-id--bg
		fill none
		stroke $fg
		stroke-width 3px

	.text-id--fg
		fill $fg

	.text-share--bg
		fill none
		stroke $fg
		stroke-width 3px

	.text-share--fg
		fill $fg

	.text-count--bg
		fill none
		stroke $fg
		stroke-width 3px

	.text-count--fg
		fill $fg

	rect
		stroke-width 4px
		stroke-width 2px
		stroke $fg
		// stroke $fg

	.leaf--lol
		rect
			fill $c-lol
			stroke darken($c-lol, 25)

		.text-id--bg, .text-share--bg, .text-count--bg
			stroke darken($c-lol, 0)

	.leaf--ha
		rect
			fill $c-ha
			stroke darken($c-ha, 20)

		.text-id--bg, .text-share--bg, .text-count--bg
			stroke darken($c-ha, 0)

	.leaf--acronym
		rect
			fill $c-acronym
			stroke darken($c-acronym, 20)

		.text-id--bg, .text-share--bg, .text-count--bg
			stroke darken($c-acronym, 0)

	.leaf--other
		rect
			fill $c-other
			stroke darken($c-other, 10)

		.text-id--bg, .text-share--bg, .text-count--bg
			stroke darken($c-other, 0)

	.leaf--text
		rect
			fill $c-text
			stroke darken($c-text, 20)

		.text-id--bg, .text-share--bg, .text-count--bg
			stroke darken($c-text, 0)

	.header__key
		display flex
		justify-content center

		li
			padding 0.5em
			// text-transform uppercase
			line-height 1
			set-type-size(small, false)
			width 6rem
			text-align center
			font-weight 600
			font-family $mono

		.key--lol
			background-color $c-lol

		.key--ha
			background-color $c-ha

		.key--acronym
			background-color $c-acronym

		.key--text
			background-color $c-text

		.key--other
			background-color $c-other

#share .chart-case
	figure
		margin 2rem auto
		margin-top 0

	.case__header
		margin 1rem auto
		margin-top 2rem
		padding 1rem 0
		font-family $mono

	.header__toggle
		display flex
		justify-content center
		margin-bottom 1rem

	.header__slider
		margin 0 auto
		min-width 10rem
		width 25%

	.slider-label
		margin 1rem auto
		min-width 10rem
		width 25%
		text-align center
		text-transform uppercase
		set-type-size(small, false)
		position relative
		font-weight 600

		&:before
			position absolute
			top 0
			left 0
			display inline-block
			content '-'

		&:after
			position absolute
			top 0
			right 0
			display inline-block
			content '+'

	button
		width 8rem

	.header__key
		display flex
		justify-content center

		li
			padding 0.5em
			line-height 1
			set-type-size(small, false)
			width 6rem
			border 2px solid $fg
			text-align center
			font-weight 600

		span
			display block
			transform translateY(-175%)

		li:first-of-type
			border-right none
			background-color $grey
			color $fg

		li:last-of-type
			background repeating-linear-gradient(
				45deg,
				transparent,
				transparent 2px,
				$fg 2px,
				$fg 4px
			)
			color $fg
			text-transform uppercase

	figure
		margin 0 auto
		min-height 320px
		max-width 60rem
		font-family $mono

		ul
			position relative
			display block
			height 100%

		li
			position absolute
			top 0
			left 0
			display flex
			width 100%
			border 4px solid $fg
			user-select none

			&.is-text
				.lower p
					display block

			&.is-stripe
				.upper
					background repeating-linear-gradient(
						45deg,
						transparent,
						transparent 4px,
						$fg 4px,
						$fg 8px
					)

		div
			position relative
			margin 0

		p
			position absolute
			top 50%
			left 1rem
			display none
			margin 0
			color $white
			color $fg
			font-weight 600
			font-size inherit
			line-height 1
			transform translateY(-50%)

		.share
			margin-left 0.75em
			font-size 0.5em
			opacity 0.5

		.upper
			background $fg

			p
				display none

		.lower
			background-color $fg

			p
				color $fg

	figure li
		&.family--lol
			// border-color darken($c-lol, 25)
			.lower
				border-right 4px solid $fg
				background-color $c-lol

		&.family--ha
			// border-color darken($c-ha, 20)
			.lower
				border-right 4px solid $fg
				background-color $c-ha

		&.family--acronym
			// border-color darken($c-acronym, 20)
			.lower
				border-right 4px solid $fg
				background-color $c-acronym

		&.family--other
			// border-color darken($c-other, 20)
			.lower
				border-right 4px solid $fg
				background-color $c-other

		&.family--text
			// border-color lighten($c-text, 30)
			.lower
				border-right 4px solid $fg
				background-color $c-text
