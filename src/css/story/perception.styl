#perception
	.ui__terms
		margin 0 auto
		max-width $column-width
		display flex
		justify-content center
		flex-wrap wrap
		
		button
			font-family $mono
			background-color $off-white
			padding 0.25em 0.5em
			line-height 1
			border-radius 16px
			margin 0.5rem
			border 2px solid $gray
			&:hover
				background-color $secondary
			&.is-active
				background-color $secondary
				border-color $fg
				box-shadow 0 0 4px 2px rgba($fg, 0.25)
			&.is-complete
				cursor not-allowed
				opacity 0.5

	.ui__slider
		max-width $column-width * 0.925
		margin 0 auto
		&.is-disabled
			opacity 0.5
		&.noUi-horizontal.is-disabled
			cursor not-allowed
		.noUi-handle.is-disabled
			cursor not-allowed

		&.noUi-target
			box-shadow none
			// border none
			border-color $gray
			border-width 2px
			border-radius 4px
			background-color $off-white
		
		&.noUi-horizontal
			cursor pointer

		.noUi-connect
			background-color $gray-dark

		.noUi-handle
			cursor pointer
			border-color $gray-dark
			border-width 2px
			border-radius 8px
			background-color $white
			&:before
				display none
			&:after
				display none

	.ui__scale
		&.is-disabled
			opacity 0.5
			filter grayscale(100%)

		ul
			margin 1rem auto
			max-width $column-width
			display flex
			justify-content center
			align-items flex-end
		li
			// width 5rem
			padding 0 3.25rem
			&:first-of-type
				padding-left 0
			&:last-of-type
				padding-right 0

	.ui__instructions
		set-type-size(root)
		color $gray-dark
		max-width $column-width
		margin 1rem auto

	.instructions--2 span.is-active
		border-bottom 2px solid $fg