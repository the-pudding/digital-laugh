#perception
	.section__steps
		display flex
		max-width 100rem
		justify-content center
		margin 0 auto

	.step
		padding 1rem

	.steps__pick
		width 30%
		background-color $primary
	
	.steps__answer
		width 70%
		background-color $secondary

	.step__terms
		margin 0 auto
		max-width $column-width
		display flex
		// justify-content space-around
		flex-wrap wrap
		
		.btn
			&.is-complete
				cursor not-allowed
				opacity 0.5

	.step__slider
		max-width $column-width * 0.925
		margin 0 auto
		&.is-disabled
			opacity 0.5
		&.noUi-horizontal.is-disabled
			cursor not-allowed
		.noUi-handle.is-disabled
			cursor not-allowed

		&.noUi-target
			box-shadow none
			// border none
			border-color $gray
			border-width 2px
			border-radius 4px
			background-color $off-white
		
		&.noUi-horizontal
			cursor pointer

		.noUi-connect
			background-color $gray-dark

		.noUi-handle
			cursor pointer
			border-color $gray-dark
			border-width 2px
			border-radius 8px
			background-color $white
			&:before
				display none
			&:after
				display none

	.step__scale
		&.is-disabled
			opacity 0.5
			filter grayscale(100%)

		ul
			margin 1rem auto
			max-width $column-width
			display flex
			justify-content space-between
			align-items flex-end
		
		li
			// width 10rem
			filter grayscale(100%)
			width 20%
			padding 0 0.5rem
			color $gray-light
			&:first-of-type
				padding-left 0
			&:last-of-type
				padding-right 0
			&.is-active
				filter grayscale(0)
				color $gray-dark
		span
			display block
			margin-top 0.5rem
			set-type-size(x-small, false)
			line-height 1.35

	.step__instructions
		set-type-size(root)
		font-family $mono
		color $fg
		max-width $column-width
		margin 1rem auto


	.step__submit
		text-align center
		padding 1rem 0
	.section__skip
		margin-top 3rem
		text-align center