/* CUSTOM STORY STYLE */
section
	margin 3em auto 3rem auto
	
.section__info
	padding 3rem 1rem 3rem 1rem
	
	h2
		font-family $mono
		font-weight 700
		max-width $column-width
		margin 0 auto
		set-type-size(xx-large, false)
	p
		max-width $column-width
		margin 0 auto

	
.btn
	font-family $mono
	font-weight 700
	background-color $white
	padding 0.5em 0.75em
	line-height 1
	border-radius 24px
	margin 0.5rem
	text-transform uppercase
	user-select none
	&:hover
		background-color $secondary
	&.is-active
		background-color $secondary
		border-color $fg
	&--border
		background-color transparent
		border 3px solid $fg

.prose
	background-color $white
	padding 2rem
	margin-top 1rem
	border 4px solid $fg
	box-shadow 8px 8px 0 0 $fg
	p
		margin-top 0