/* CUSTOM STORY STYLE */
section
	margin 3em auto 3rem auto
	
.section__info
	padding 3rem 1rem 3rem 1rem
	// background-color $primary
	// clip-path polygon(0 0, 100% 0, 100% 100%, 0 80%)
	
	h2
		font-family $mono
		font-weight 700
		max-width $column-width
		margin 0 auto
		set-type-size(xx-large, false)
	p
		max-width $column-width
		margin 0 auto

	
.btn
	font-family $mono
	background-color $white
	padding 0.25em 0.5em
	line-height 1
	border-radius 16px
	margin 0.5rem
	set-type-size(root, false)
	box-shadow 0 0 4px 2px rgba($fg, 0.25)
	&:hover
		background-color $secondary
	&.is-active
		background-color $secondary
		border-color $fg
		// box-shadow 0 0 4px 2px rgba($fg, 0.25)
	&--border
		border 1px solid $fg
		box-shadow none


.svg--gradient
	display none