/* CUSTOM STORY STYLE */
section
	margin 3em auto 3rem auto

q
	background-color rgba($secondary, 0.5)

.section__info
	padding 3rem 1rem 3rem 1rem

	h2
		margin 0 auto
		max-width $column-width
		font-weight 700
		font-family $mono
		set-type-size(xx-large, false)

		span
			display inline-block
			margin-right 0.5em
			padding 0 0.5em
			background-color $secondary

	p
		margin 0 auto
		max-width $column-width

	.note
		display block
		margin-top 1em
		set-type-size(root, true)

.btn
	margin 0.5rem
	padding 0.5em 0.75em
	border-radius 24px
	background-color $white
	text-transform uppercase
	font-weight 700
	font-family $mono
	line-height 1
	user-select none

	&:hover
		background-color $secondary

	&.is-active
		border-color $fg
		background-color $secondary

	&--border
		border 3px solid $fg
		background-color transparent

.prose
	margin-top 1rem
	padding 2rem
	border 4px solid $fg
	background-color $white
	box-shadow 8px 8px 0 0 $fg

	p
		margin-top 0
		max-width none
		set-type-size(x-large, true)

.slider
	margin 0 auto
	max-width $perception-width * 0.925

	&.is-disabled
		opacity 0.33

	&.noUi-horizontal.is-disabled
		cursor not-allowed

		.noUi-handle
			cursor not-allowed

	&.noUi-target
		border-width 0
		border-color $fg
		border-radius 4px
		background-color rgba($fg, 0.25)
		box-shadow none

	&.noUi-horizontal
		height 8px
		cursor pointer

	.noUi-connect
		background-color $secondary

	.noUi-handle
		top -12px
		width 32px
		height 32px
		border-width 3px
		border-color $fg
		border-radius 50%
		background-color $white
		cursor pointer

		&:before
			display none

		&:after
			display none