.intro
	overflow hidden
	margin-top 2.9rem
	width 100%

	&__top
		// position relative
		display grid
		margin-bottom 4rem
		width 100%
		height 80vh
		border 4px solid $fg
		grid-template-columns 3fr 4fr 3fr
		grid-template-rows 1fr 1fr 1fr

		h1
			margin 0
			vertical-align middle
			font-weight 600
			font-size 15vw
			font-family $mono

			+mq('bp-5')
				font-size 12.5vh

		> *
			position relative
			border 4px solid $fg

		span
			position absolute
			top 50%
			left 0
			display block
			padding 0 1rem
			transform translateY(-50%)

			+mq('bp-5')
				padding 0 2rem

	&__prelude
		margin 0 auto
		max-width $column-width
		// padding 0

	&__images
		display flex
		justify-content center
		margin-top 2rem

		img
			width 10rem

			&:first-child
				margin-right 10rem

			&:last-child
				margin-left 2rem

	.top__hed--a
		background-color $green
		grid-area 1 / 1 / 1 / 4

	.top__hed--b
		background-color $yellow
		grid-area 2 / 1 / 2 / 2

	.top__hed--c
		background-color $purple
		grid-area 3 / 1 / 3 / 3

	.top__byline
		margin 0
		background-color $red
		font-weight 600
		font-family $mono
		grid-area 2 / 2 / 3 / 4
		set-type-size(root, true)

		+mq('bp-4')
			grid-area 2 / 2 / 3 / 3

		span
			left 50%
			width 15rem
			transform translate(-50%, -50%)

		a
			display block
			border none

	.top__stripes
		background repeating-linear-gradient(
			45deg,
			$fg,
			$fg 8px,
			transparent 8px,
			transparent 32px
		)
		grid-area 3 / 3 / 4 / 3

		+mq('bp-4')
			grid-area 2 / 3 / 4 / 3
