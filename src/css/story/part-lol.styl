#lol
	figure
		position relative
		margin-bottom 4rem
		min-height 320px
		width 100%
		height 80vh

		img
			position absolute
			top 24%
			left 30%
			width 8vh
			transform rotate(-10deg)
			transform-origin 50% 100%

	path
		fill none
		stroke-linecap square

	.path--bg
		stroke-width 6px
		stroke $fg

	.path--fg
		stroke-width 3px
		stroke $gray

	text
		font-weight 600
		font-family $mono

	.laugh.is-noise
		text
			opacity 0

		.path--fg
			stroke $gray-light
			stroke-width 2px

		.path--bg
			opacity 0

	.laugh.is-prenoise
		text
			opacity 1

		.path--bg
			opacity 1
			stroke $fg
			stroke-width 6px

		.path--fg
			stroke $c-ha
			stroke-width 3px

	.laugh--lol
		.path--bg
			stroke $fg
			stroke-width 16px

		.path--fg
			stroke $c-lol
			stroke-width 12px

		text
			set-type-size(xxxx-large, false)

	.laugh--haha
		.path--fg
			stroke $c-ha

	.laugh--lmao
		.path--fg
			stroke $c-acronym

	.g-axis
		path
			display none

		text
			font-size 12px
			fill $gray-dark

	.axis--x
		line
			display none

	.axis--y
		line
			stroke-opacity 0.25
			stroke-dasharray 4px 4px

		.tick:nth-child(2)
			display none